  <h1 class="h3 mb-3 fw-normal">Sign in</h1>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="form-floating">
        <%= f.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com", autocomplete: "email", required: true, autofocus: true %>
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating">
        <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password", autocomplete: "current-password", required: true %>
        <label for="floatingPassword">Password</label>
      
       <div class="custom-flex">
          <div class="custom-flex">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>  
          <div class="custom-flex">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "custom-link" %>
          </div>
        </div>
      <div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-warning w-100 py-2", type: "submit" %>
      </div>
    </div>
  <% end %>
  